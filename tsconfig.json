{
  "compileOnSave": true,
  "compilerOptions": {
      "outDir": "lib",
      "sourceMap": true,
      "noImplicitAny": true,
      "strict": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "removeComments": false,
      "target": "es5",
      "jsx": "react",
      "baseUrl": "./",
      "allowJs": true,
      "experimentalDecorators": true,
      "lib": [
        "es6",
        "es2015",
        "dom",
        "es2015.promise"
      ],
      "types": [
        "node"
      ],
      "typeRoots" : [
        "./node_modules/@types",
        "./node_modules/amap-js-api-typings"
      ]
  },
  "include": ["./components/**/*", "./hooks/**/*"]
}

